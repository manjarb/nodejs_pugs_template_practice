mixin storeCard(store = {})
    .store
        .store__hero
            .store__action
                button soon
            img(src=`/uploads/${stores.photo || 'stores.png'}`)
            h2.title
                a(href=`/store/${store.slug}`) #{store.name}
        .store__details
            p= store.description.split(' ').slice(0, 25).join(' ')